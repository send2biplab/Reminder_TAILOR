<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/saasasasa"

    android:padding="8dp" >


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp" >


        <ImageView
            android:visibility="gone"
            android:id="@+id/alert"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_add_alert_24"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/edittt"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/send"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp" />
        <ImageView

            android:id="@+id/callll"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_phone_forwarded_24"/>




    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/thumbnail"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
            android:text="sdsd"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>






</RelativeLayout>